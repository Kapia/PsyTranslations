{% macro postNavigation(prev, next) %}
  <nav>
    <div class="navbar-menu">
      {% if prev %}
        <div class="navbar-start">
          <a href="{{ prev.url }}">
            <svg width="16" height="16" viewBox="0 0 24 24">
              <g stroke-linecap="round" stroke-linejoin="round" stroke-width="2" fill="none" stroke="currentColor" stroke-miterlimit="10"><path d="M22 12H2M9 19l-7-7 7-7"/></g>
            </svg>
            <b>Previous story</b>
            <br/>
            <small>{{ prev.data.title }}</small>
          </a>
        </div>
      {% endif %}
      {% if next %}

        <div class="navbar-end">
          <a href="{{ next.url }}">
            <b>Next story</b>
            <svg width="16" height="16" viewBox="0 0 24 24">
              <g stroke-linecap="round" stroke-linejoin="round" stroke-width="2" fill="none" stroke="currentColor" stroke-miterlimit="10"><path d="M2 12h20M15 5l7 7-7 7"/></g>
            </svg>
            <br/>
            <small>{{ next.data.title }}</small>
          </a>
        </div>
      {% endif %}
    </div>
  </nav>
{% endmacro %}
